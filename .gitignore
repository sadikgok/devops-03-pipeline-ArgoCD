apiVersion: v1
kind: Service
metadata:
  name: devops-03-pipeline-aws-service
  namespace: default
  labels:
    app: devops-03-pipeline-aws-gitops
spec:
  selector:
    app: devops-03-pipeline-aws-gitops
  ports:
